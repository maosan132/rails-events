<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Party</th>
      <th>Description</th>
      <th>Date</th>
      <th>Host</th>
      <th>Location</th>
    </tr>
  </thead>

  <tbody>
    <% @event.each do |eveeventt| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.users.username %></td>
        <td><%= event.location %></td>
        <td><%= link_to 'See the event', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<% if member_signed_in? %>
  <%= link_to 'New Event', new_event_path %>
  <%= link_to 'Send Invitations', new_invitation_path %>
  <%= link_to "Log out", destroy_use_session_path, method: :delete, :class => 'link' %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, :class => 'link' %>
  <%= link_to "Log in", new_user_session_path, :class => 'link' %>
<% end %>


